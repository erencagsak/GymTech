<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".activity.userPage.fragments.UserHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_200"
        android:alpha="0.7">
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yönetici Paneline Hoşgeldiniz"
                    android:textColor="@color/my_primary"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Üyeler"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_____________________________________________________"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingStart="12dp"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/boy"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/boy"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/girl"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eren Taha ÇAĞŞAK"
                        android:layout_marginEnd="2dp"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Murat Kazan"
                        android:paddingStart="7dp"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="30dp"
                        android:text="Ece Adıgüzel"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yönetici"
                        android:textAlignment="center"
                        android:paddingStart="37dp"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fitness Antrenörü"
                        android:paddingStart="24dp"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="18dp"
                        android:text="Yaşam Koçu"
                        android:alpha="0.7"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popüler Egzersizler"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_____________________________________________________"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/back_workout"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/arm_workout"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/chest_workout"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>



</RelativeLayout>